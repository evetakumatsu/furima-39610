<li class='list'>
  <%= link_to item_path(item.id) do %>
  <div class='item-img-content'>
  <%= image_tag item.image, class: "item-img" %>
    <% if item.sold? %>
      <div class='sold-out'>
        <span>Sold Out!!</span>
      </div>
    <% end %>
  </div>
  <div class='item-info'>
    <h3 class='item-name'>
      <%= item.item_name %>
    </h3>
    <div class='item-price'>
      <span> <%= item.price %>å†† <br><%=  DeliveryCharge.find(item.delivery_charge_id).name %></span>
      <div class='star-btn'>
        <% if user_signed_in? && current_user.favorite_items.exists?(item.id) %>
          <%= image_tag "small_star.png", class:"star-icon" %>
        <% else %>
          <%= image_tag "star.png", class:"star-icon" %>
        <% end %>
        <span class='star-count'><%= item.favorites.count %></span>
      </div>
    </div>
  </div>
  <% end %>
</li>

