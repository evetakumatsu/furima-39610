<%= render "shared/header" %>
<div class='main'>
  <div class='item-contents' >
    <h2 class='title'>商品一覧</h2>
    <div class="subtitle" >
      <%= search_form_for @q, url: search_items_path, remote: true, class:'item-search-form', id: 'form' do |f| %>
        <%= f.collection_select(:category_id_eq, Category.where.not(id: 1), :id, :name, {include_blank: "新規投稿商品"}, {class:"item-select-box", id:"item-category"}) %>
        <button class="item-search-button" id="item-search-button">
          <%= image_tag "search.png", class:"search-icon" %>
        </button>
      <% end %>
    </div>
    <ul class='item-lists' id='items-list'>
      <% if @items.length == 0 %>
        <li class='list'>
          <%= link_to '#' do %>
          <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-img" %>
          <div class='item-info'>
            <h3 class='item-name'>
              商品を出品してね！
            </h3>
            <div class='item-price'>
              <span>99999999円<br>(税込み)</span>
              <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          </div>
          <% end %>
        </li>
      <% else %>
        <%= item_lists(@items) %>
      <% end %>
    </ul>
  </div>

</div>

<a href="#">
    <%= image_tag 'top-scroll.png' , size: '50x50' ,class: "top-scroll", id: 'top-scroll' %>
<a>
<%= link_to(new_item_path, class: 'purchase-btn', id: 'purchase-btn') do %>
  <span class='purchase-btn-text'>出品する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>
